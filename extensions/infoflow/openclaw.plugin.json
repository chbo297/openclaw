{
  "id": "infoflow",
  "channels": ["infoflow"],
  "configSchema": {
    "type": "object",
    "additionalProperties": false,
    "properties": {
      "apiHost": { "type": "string" },
      "enabled": { "type": "boolean" },
      "name": { "type": "string" },
      "checkToken": { "type": "string" },
