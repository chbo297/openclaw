            "followUp": { "type": "boolean" },
            "followUpWindow": { "type": "number" },
            "systemPrompt": { "type": "string" }
          },
          "additionalProperties": false
        }
      },
      "accounts": {
        "type": "object",
        "additionalProperties": {
          "type": "object",
          "properties": {
